@model List<LogicaNegocio.Subasta>

@{
    ViewData["Title"] = "Index";
}

<h1>Subastas</h1>
@if (Model != null & Model.Count > 0)
{
    <table class="table">
        <thead>
        <th>Nombre</th>
        <th>Estado</th>
        <th>Oferta más alta</th>
        <th>Fecha de publicacion</th>
        <th>Acción</th>
        </thead>
        <tbody>
            @foreach (LogicaNegocio.Subasta subasta in Model)
            {
                    <tr>
                    <td>@subasta.Nombre</td>
                    <td>@subasta.Estado</td>
                    <td>@subasta.Precio()</td>
                    <td>@subasta.FechaPublicacion</td>
                    @if (Context.Session.GetString("logged-user-type") == "Administrador") {
                        @if (subasta.Estado.Trim().ToUpper() == "ABIERTA")
                        {
                            <td><a href="/Subasta/Edit?id=@subasta.Id">Cerrar subasta</a></td>
                        }
                    } else if (Context.Session.GetString("logged-user-type") == "Cliente")
                    {
                        <td><a href="/Subasta/Edit?id=@subasta.Id">Ofertar</a></td>
                    }
                    </tr>
            }
       </tbody>
    </table>
}
else
{
    <p>No hay subastas en el sistema</p>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
else if (TempData["Exito"] != null)
{
    <div class="alert alert-success">
        @TempData["Exito"]
    </div>
}
