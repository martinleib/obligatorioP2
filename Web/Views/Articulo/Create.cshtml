
@{
    ViewData["Title"] = "Create";
}

<form action="#" method="post">
    <header class="mb-3">
        <h1 class="fs-4">Alta de articulo</h1>
    </header>
    <section class="mb-3">
        <label class="form-label" for="alta--precio" name="precio">Precio</label>
        <input type="number" class="form-control" id="alta--precio" />
    </section>
    <section class="mb-3">
        <label class="form-label" for="alta--nombre" name="nombre">Nombre</label>
        <input type="text" class="form-control" id="alta--nombre" />
    </section>
    <section class="mb-3">
        <label class="form-label" for="alta--categoria" name="categoria">Categoria</label>
        <input type="text" class="form-control" id="alta--categoria" />
    </section>
    <section class="mb-3">
        <button type="submit" class="btn btn-dark">Crear</button>
    </section>
</form>

